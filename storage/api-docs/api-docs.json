{
    "openapi": "3.0.0",
    "info": {
        "title": "Smart Healthcare System API",
        "description": "API for Smart Healthcare System",
        "contact": {
            "email": "support@smart-healthcare.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api"
        },
        {
            "url": "/api"
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Sign in",
                "description": "Login by email, password",
                "operationId": "authLogin",
                "requestBody": {
                    "description": "Pass user credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "raihanstark@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "qwerty123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "access_token": {
                                            "type": "string"
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "example": "Bearer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/doctors/schedules": {
            "get": {
                "tags": [
                    "Doctors"
                ],
                "summary": "[AMAN] Get list of doctor schedules",
                "description": "Probis #1, Alur 3: Returns list of doctor schedules",
                "operationId": "getSchedules",
                "parameters": [
                    {
                        "name": "specialization",
                        "in": "query",
                        "description": "Filter by specialization",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/DoctorScheduleResponse"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/janji/ketersediaan": {
            "get": {
                "tags": [
                    "JanjiTemu"
                ],
                "summary": "[PUBLIK] Cek jam terisi",
                "description": "Endpoint publik untuk melihat jam (mulai) yang SUDAH TERISI.",
                "operationId": "getKetersediaan",
                "parameters": [
                    {
                        "name": "id_dokter",
                        "in": "query",
                        "description": "ID Dokter",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "tanggal",
                        "in": "query",
                        "description": "Tanggal (YYYY-MM-DD)",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Daftar jam (H:i) yang sudah terisi",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "example": "14:00"
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validasi gagal"
                    }
                }
            }
        },
        "/janji": {
            "get": {
                "tags": [
                    "JanjiTemu"
                ],
                "summary": "[AMAN] Get list Janji Temu (by Role)",
                "description": "Probis #2: Returns list of Janji Temu (sesuai role user)",
                "operationId": "getJanjiTemu",
                "parameters": [
                    {
                        "name": "status",
                        "in": "query",
                        "description": "Filter by status (terjadwal, selesai, dibatalkan)",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/JanjiTemu"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "JanjiTemu"
                ],
                "summary": "[AMAN] Create a new Janji Temu",
                "description": "Probis #1: Pasien Membuat Janji Temu (otomatis 60 menit)",
                "operationId": "createJanjiTemu",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateJanjiTemuRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Janji Temu berhasil dibuat",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/JanjiTemu"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validasi gagal (bentrok/luar shift)"
                    },
                    "403": {
                        "description": "Forbidden (Pasien tidak ditemukan)"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/janji/{id}": {
            "get": {
                "tags": [
                    "JanjiTemu"
                ],
                "summary": "[AMAN] Get Janji Temu by ID",
                "description": "Mendapat detail Janji Temu (jika user punya hak)",
                "operationId": "getJanjiTemuById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Janji Temu id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/JanjiTemu"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            },
            "put": {
                "tags": [
                    "JanjiTemu"
                ],
                "summary": "[AMAN] Update status Janji Temu (Selesai / Batal)",
                "description": "Probis #3 & #4: Pembatalan atau Penyelesaian Janji",
                "operationId": "updateJanjiTemuStatus",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Janji Temu id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UpdateJanjiTemuStatusRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/JanjiTemu"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "403": {
                        "description": "Forbidden (Misal: Pasien ingin 'selesai')"
                    },
                    "422": {
                        "description": "Validation error"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "JanjiTemu"
                ],
                "summary": "[AMAN] Delete Janji Temu (Not Allowed)",
                "description": "Gunakan PUT /janji/{id} dengan status 'dibatalkan' (Sesuai Probis #3)",
                "operationId": "deleteJanjiTemu",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Janji Temu id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "405": {
                        "description": "Method Not Allowed"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/patients/{id}": {
            "get": {
                "tags": [
                    "Patients"
                ],
                "summary": "[AMAN] Get patient information",
                "description": "Mendapatkan detail profil pasien.",
                "operationId": "getPatientById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Patient id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Patient"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Doctor": {
                "title": "Doctor (Model Lengkap)",
                "description": "Model Doctor lengkap dari database",
                "properties": {
                    "id_dokter": {
                        "type": "integer",
                        "readOnly": true
                    },
                    "id_pengguna": {
                        "type": "integer"
                    },
                    "spesialisasi": {
                        "type": "string"
                    },
                    "no_lisensi": {
                        "type": "string"
                    },
                    "biaya_konsultasi": {
                        "type": "number",
                        "format": "float"
                    },
                    "shift": {
                        "type": "string",
                        "enum": [
                            "pagi",
                            "malam"
                        ]
                    },
                    "pengguna": {
                        "$ref": "#/components/schemas/Pengguna"
                    }
                },
                "type": "object"
            },
            "DoctorScheduleResponse": {
                "title": "Doctor Schedule Response",
                "description": "Data dokter yang disederhanakan untuk ditampilkan di jadwal",
                "properties": {
                    "id_dokter": {
                        "type": "integer",
                        "example": 1
                    },
                    "nama_lengkap": {
                        "type": "string",
                        "example": "Raihan Strange"
                    },
                    "spesialisasi": {
                        "type": "string",
                        "example": "Ahli Sihir"
                    },
                    "shift": {
                        "type": "string",
                        "enum": [
                            "pagi",
                            "malam"
                        ],
                        "example": "pagi"
                    },
                    "biaya_konsultasi": {
                        "type": "number",
                        "format": "float",
                        "example": 100000
                    }
                },
                "type": "object"
            },
            "JanjiTemu": {
                "title": "Janji Temu (Respons)",
                "description": "Model Janji Temu (Respons)",
                "properties": {
                    "id_janji_temu": {
                        "type": "integer"
                    },
                    "id_pasien": {
                        "type": "integer"
                    },
                    "id_dokter": {
                        "type": "integer"
                    },
                    "tanggal_janji": {
                        "type": "string",
                        "format": "date"
                    },
                    "waktu_mulai": {
                        "type": "string",
                        "format": "time",
                        "example": "14:00"
                    },
                    "waktu_selesai": {
                        "type": "string",
                        "format": "time",
                        "example": "15:00"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "terjadwal",
                            "selesai",
                            "dibatalkan"
                        ]
                    },
                    "keluhan": {
                        "type": "string"
                    },
                    "pasien": {
                        "$ref": "#/components/schemas/Patient"
                    },
                    "dokter": {
                        "$ref": "#/components/schemas/Doctor"
                    }
                },
                "type": "object"
            },
            "CreateJanjiTemuRequest": {
                "title": "Create Janji Temu Request",
                "description": "Body request untuk membuat Janji Temu",
                "required": [
                    "id_dokter",
                    "tanggal_janji",
                    "waktu_mulai",
                    "keluhan"
                ],
                "properties": {
                    "id_pasien": {
                        "description": "Opsional (Otomatis diisi jika login sbg Pasien)",
                        "type": "integer"
                    },
                    "id_dokter": {
                        "description": "ID Dokter",
                        "type": "integer"
                    },
                    "tanggal_janji": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-11-20"
                    },
                    "waktu_mulai": {
                        "description": "Waktu Mulai (Format HH:mm)",
                        "type": "string",
                        "format": "time",
                        "example": "14:00"
                    },
                    "keluhan": {
                        "description": "Keluhan Pasien",
                        "type": "string",
                        "example": "Sakit kepala dan mual"
                    }
                },
                "type": "object"
            },
            "UpdateJanjiTemuStatusRequest": {
                "title": "Update Janji Temu Status Request",
                "description": "Body request untuk update status",
                "required": [
                    "status"
                ],
                "properties": {
                    "status": {
                        "description": "Status baru",
                        "type": "string",
                        "enum": [
                            "selesai",
                            "dibatalkan"
                        ]
                    }
                },
                "type": "object"
            },
            "Patient": {
                "title": "Patient",
                "description": "Model Profil Pasien",
                "properties": {
                    "id_pasien": {
                        "type": "integer",
                        "example": 1
                    },
                    "id_pengguna": {
                        "type": "integer",
                        "example": 1
                    },
                    "tanggal_lahir": {
                        "type": "string",
                        "format": "date",
                        "example": "2003-12-01"
                    },
                    "golongan_darah": {
                        "type": "string",
                        "enum": [
                            "A",
                            "B",
                            "AB",
                            "O"
                        ]
                    },
                    "alamat": {
                        "type": "string",
                        "example": "jalan avengers"
                    },
                    "pengguna": {
                        "$ref": "#/components/schemas/Pengguna"
                    }
                },
                "type": "object"
            },
            "Pengguna": {
                "title": "Pengguna",
                "description": "Model Pengguna (data dasar)",
                "properties": {
                    "id_pengguna": {
                        "type": "integer",
                        "example": 1
                    },
                    "nama_lengkap": {
                        "type": "string",
                        "example": "Raihan Stark"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "raihanstark@gmail.com"
                    },
                    "no_telepon": {
                        "type": "string",
                        "example": "085156401611"
                    },
                    "role": {
                        "type": "string",
                        "example": "pasien"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "apiAuth": {
                "type": "http",
                "description": "Login with email and password to get the authentication token",
                "name": "Token based Based",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Auth"
        },
        {
            "name": "Doctors",
            "description": "Doctors"
        },
        {
            "name": "JanjiTemu",
            "description": "JanjiTemu"
        },
        {
            "name": "Patients",
            "description": "Patients"
        }
    ]
}