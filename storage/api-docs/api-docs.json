                    "id_janji_temu": {
                        "description": "ID Janji Temu",
                        "type": "integer",
                        "readOnly": true
                    },
                    "id_pasien": {
                        "description": "ID Pasien",
                        "type": "integer"
                    },
                    "id_dokter": {
                        "description": "ID Dokter",
                        "type": "integer"
                    },
                    "tanggal_janji": {
