{
    "openapi": "3.0.0",
    "info": {
        "title": "Smart Healthcare System API",
        "description": "API for Smart Healthcare System",
        "contact": {
            "email": "support@smart-healthcare.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api"
        },
        {
            "url": "/api"
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Sign in",
                "description": "Login by email, password",
                "operationId": "authLogin",
                "requestBody": {
                    "description": "Pass user credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "raihanstark@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "qwerty123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "access_token": {
                                            "type": "string"
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "example": "Bearer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/janji/ketersediaan-all": {
            "get": {
                "tags": [
                    "Appointment Management"
                ],
                "summary": "[PUBLIK] Cek semua ketersediaan dokter",
                "description": "Endpoint publik untuk melihat ketersediaan semua dokter untuk 7 hari ke depan tanpa parameter.",
                "operationId": "getAllKetersediaan",
                "responses": {
                    "200": {
                        "description": "Daftar ketersediaan semua dokter",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id_dokter": {
                                                "type": "integer"
                                            },
                                            "nama_dokter": {
                                                "type": "string"
                                            },
                                            "spesialisasi": {
                                                "type": "string"
                                            },
                                            "biaya_konsultasi": {
                                                "type": "number"
                                            },
                                            "shift": {
                                                "type": "string"
                                            },
                                            "jadwal_ketersediaan": {
                                                "type": "array",
                                                "items": {
                                                    "properties": {
                                                        "tanggal": {
                                                            "type": "string",
                                                            "format": "date"
                                                        },
                                                        "hari": {
                                                            "type": "string"
                                                        },
                                                        "jam_terisi": {
                                                            "type": "array",
                                                            "items": {
                                                                "type": "string"
                                                            }
                                                        },
                                                        "shift": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/janji/booking-cepat": {
            "post": {
                "tags": [
                    "Appointment Management"
                ],
                "summary": "[AMAN] Booking Janji Temu Cepat",
                "description": "Endpoint untuk membuat janji temu secara cepat dengan validasi slot tersedia",
                "operationId": "bookingCepat",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "id_dokter",
                                    "tanggal",
                                    "waktu_mulai"
                                ],
                                "properties": {
                                    "id_dokter": {
                                        "description": "ID Dokter",
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "tanggal": {
                                        "description": "Tanggal janji temu (YYYY-MM-DD)",
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-11-20"
                                    },
                                    "waktu_mulai": {
                                        "description": "Waktu mulai (HH:mm) - Format 24 jam",
                                        "type": "string",
                                        "example": "09:00"
                                    },
                                    "keluhan": {
                                        "description": "Keluhan pasien (opsional)",
                                        "type": "string",
                                        "example": "Sakit kepala berdenyut dan mual sejak pagi"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Janji temu berhasil dibooking",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Janji temu berhasil dibooking"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/JanjiTemu"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Slot sudah terisi atau error validasi"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/janji": {
            "get": {
                "tags": [
                    "Appointment Management"
                ],
                "summary": "[AMAN] Dapatkan semua janji temu",
                "description": "Endpoint untuk mendapatkan semua janji temu (Admin/Dokter bisa lihat semua, Pasien hanya lihat miliknya)",
                "operationId": "getAllJanjiTemu",
                "responses": {
                    "200": {
                        "description": "Daftar semua janji temu",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/JanjiTemu"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/janji/{id}": {
            "get": {
                "tags": [
                    "Appointment Management"
                ],
                "summary": "[AMAN] Lihat detail janji temu",
                "description": "Endpoint untuk melihat detail janji temu berdasarkan ID.",
                "operationId": "getJanjiTemuById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID Janji Temu",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detail janji temu",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/JanjiTemu"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Janji temu tidak ditemukan"
                    },
                    "403": {
                        "description": "Tidak memiliki akses"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            },
            "put": {
                "tags": [
                    "Appointment Management"
                ],
                "summary": "[AMAN] Update janji temu",
                "description": "Endpoint untuk memperbarui janji temu.",
                "operationId": "updateJanjiTemu",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID Janji Temu",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "tanggal_janji": {
                                        "description": "Tanggal janji (opsional)",
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-11-20"
                                    },
                                    "waktu_mulai": {
                                        "description": "Waktu mulai (opsional)",
                                        "type": "string",
                                        "example": "10:00"
                                    },
                                    "waktu_selesai": {
                                        "description": "Waktu selesai (opsional)",
                                        "type": "string"
                                    },
                                    "status": {
                                        "description": "Status (opsional)",
                                        "type": "string",
                                        "enum": [
                                            "terjadwal",
                                            "selesai",
                                            "dibatalkan"
                                        ],
                                        "example": "terjadwal"
                                    },
                                    "keluhan": {
                                        "description": "Keluhan pasien (opsional)",
                                        "type": "string",
                                        "example": "Sakit kepala berdenyut dan mual sejak pagi"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Janji temu berhasil diupdate",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Janji temu berhasil diupdate"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/JanjiTemu"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validasi gagal"
                    },
                    "403": {
                        "description": "Tidak memiliki akses"
                    },
                    "404": {
                        "description": "Janji temu tidak ditemukan"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Appointment Management"
                ],
                "summary": "[AMAN] Hapus janji temu",
                "description": "Endpoint untuk menghapus janji temu (soft delete).",
                "operationId": "deleteJanjiTemu",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID Janji Temu",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Janji temu berhasil dihapus",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Janji temu berhasil dihapus"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Tidak memiliki akses"
                    },
                    "404": {
                        "description": "Janji temu tidak ditemukan"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/janji/search": {
            "get": {
                "tags": [
                    "Appointment Management"
                ],
                "summary": "[AMAN] Cari janji temu",
                "description": "Endpoint untuk mencari janji temu berdasarkan tanggal dan/atau nama dokter.",
                "operationId": "searchJanjiTemu",
                "parameters": [
                    {
                        "name": "tanggal",
                        "in": "query",
                        "description": "Filter berdasarkan tanggal (YYYY-MM-DD)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date",
                            "example": "2025-11-20"
                        }
                    },
                    {
                        "name": "nama_dokter",
                        "in": "query",
                        "description": "Filter berdasarkan nama dokter (partial match)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "Raihan"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Daftar janji temu yang sesuai filter",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SearchJanjiTemuResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/patients/{id}": {
            "get": {
                "tags": [
                    "Patients"
                ],
                "summary": "[AMAN] Get patient information",
                "description": "Mendapatkan detail profil pasien.",
                "operationId": "getPatientById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Patient id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Patient"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/user": {
            "get": {
                "tags": [
                    "User Profile"
                ],
                "summary": "[AMAN] Get user profile",
                "description": "Get current authenticated user profile",
                "operationId": "getUserProfile",
                "responses": {
                    "200": {
                        "description": "User profile retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserProfileResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "JanjiTemu": {
                "title": "Janji Temu (Respons)",
                "description": "Model Janji Temu (Respons)",
                "properties": {
                    "id_janji_temu": {
                        "type": "integer"
                    },
                    "id_pasien": {
                        "type": "integer"
                    },
                    "id_dokter": {
                        "type": "integer"
                    },
                    "tanggal_janji": {
                        "type": "string",
                        "format": "date"
                    },
                    "waktu_mulai": {
                        "type": "string",
                        "format": "time",
                        "example": "14:00"
                    },
                    "waktu_selesai": {
                        "type": "string",
                        "format": "time",
                        "example": "15:00"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "terjadwal",
                            "selesai",
                            "dibatalkan"
                        ]
                    },
                    "keluhan": {
                        "type": "string"
                    },
                    "pasien": {
                        "$ref": "#/components/schemas/Patient"
                    },
                    "dokter": {
                        "$ref": "#/components/schemas/Doctor"
                    }
                },
                "type": "object"
            },
            "CreateJanjiTemuRequest": {
                "title": "Create Janji Temu Request",
                "description": "Body request untuk membuat Janji Temu",
                "required": [
                    "id_dokter",
                    "tanggal_janji",
                    "waktu_mulai",
                    "keluhan"
                ],
                "properties": {
                    "id_pasien": {
                        "description": "Opsional (Otomatis diisi jika login sbg Pasien)",
                        "type": "integer"
                    },
                    "id_dokter": {
                        "description": "ID Dokter",
                        "type": "integer"
                    },
                    "tanggal_janji": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-11-20"
                    },
                    "waktu_mulai": {
                        "description": "Waktu Mulai (Format HH:mm)",
                        "type": "string",
                        "format": "time",
                        "example": "14:00"
                    },
                    "keluhan": {
                        "description": "Keluhan Pasien",
                        "type": "string",
                        "example": "Sakit kepala dan mual"
                    }
                },
                "type": "object"
            },
            "UpdateJanjiTemuStatusRequest": {
                "title": "Update Janji Temu Status Request",
                "description": "Body request untuk update status",
                "required": [
                    "status"
                ],
                "properties": {
                    "status": {
                        "description": "Status baru",
                        "type": "string",
                        "enum": [
                            "selesai",
                            "dibatalkan"
                        ]
                    }
                },
                "type": "object"
            },
            "SearchJanjiTemuResponse": {
                "title": "Search Janji Temu Response",
                "description": "Response untuk pencarian janji temu",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Pencarian janji temu berhasil"
                    },
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/JanjiTemu"
                        }
                    }
                },
                "type": "object"
            },
            "Doctor": {
                "title": "Doctor (Model Lengkap)",
                "description": "Model Doctor lengkap dari database",
                "properties": {
                    "id_dokter": {
                        "type": "integer",
                        "readOnly": true
                    },
                    "id_pengguna": {
                        "type": "integer"
                    },
                    "spesialisasi": {
                        "type": "string"
                    },
                    "no_lisensi": {
                        "type": "string"
                    },
                    "biaya_konsultasi": {
                        "type": "number",
                        "format": "float"
                    },
                    "shift": {
                        "type": "string",
                        "enum": [
                            "pagi",
                            "malam"
                        ]
                    },
                    "pengguna": {
                        "$ref": "#/components/schemas/Pengguna"
                    }
                },
                "type": "object"
            },
            "Patient": {
                "title": "Patient",
                "description": "Model Profil Pasien",
                "properties": {
                    "id_pasien": {
                        "type": "integer",
                        "example": 1
                    },
                    "id_pengguna": {
                        "type": "integer",
                        "example": 1
                    },
                    "tanggal_lahir": {
                        "type": "string",
                        "format": "date",
                        "example": "2003-12-01"
                    },
                    "golongan_darah": {
                        "type": "string",
                        "enum": [
                            "A",
                            "B",
                            "AB",
                            "O"
                        ]
                    },
                    "alamat": {
                        "type": "string",
                        "example": "jalan avengers"
                    },
                    "pengguna": {
                        "$ref": "#/components/schemas/Pengguna"
                    }
                },
                "type": "object"
            },
            "Pengguna": {
                "title": "Pengguna",
                "description": "Model Pengguna (data dasar)",
                "properties": {
                    "id_pengguna": {
                        "type": "integer",
                        "example": 1
                    },
                    "nama_lengkap": {
                        "type": "string",
                        "example": "Raihan Stark"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "raihanstark@gmail.com"
                    },
                    "no_telepon": {
                        "type": "string",
                        "example": "085156401611"
                    },
                    "role": {
                        "type": "string",
                        "example": "pasien"
                    }
                },
                "type": "object"
            },
            "UserProfile": {
                "title": "User Profile",
                "description": "User profile response",
                "properties": {
                    "id_pengguna": {
                        "type": "integer"
                    },
                    "nama_lengkap": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "role": {
                        "type": "string",
                        "enum": [
                            "pasien",
                            "dokter",
                            "admin"
                        ]
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "UserProfileResponse": {
                "title": "User Profile Response",
                "description": "Response untuk user profile",
                "properties": {
                    "data": {
                        "$ref": "#/components/schemas/UserProfile"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "apiAuth": {
                "type": "http",
                "description": "Login with email and password to get the authentication token",
                "name": "Token based Based",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            },
            "sanctum": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "description": "Enter your Sanctum token from /auth/login response. Just paste the token value without \"Bearer\" prefix."
            }
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "Authentication"
        },
        {
            "name": "Appointment Management",
            "description": "Appointment Management"
        },
        {
            "name": "Patients",
            "description": "Patients"
        },
        {
            "name": "User Profile",
            "description": "User Profile"
        }
    ]
}